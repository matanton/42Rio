#include <unistd.h>

int ft_strlen(char *str)
{
	int i = 0;
	while (str[i] != '\0')
		i++;
	return(i);
}

char  *rev_print (char *str)
{
    int i = ft_strlen(str);
    int j = 0;

    char new[i-1];

    if(!str)
        return(0);
    while (i >= 0)
    {
        new[j] = str[i-1]
        i--;
        j++;
    }
    write(1,&new, i-1);
    return(str);
}
